{% extends "default.twig" %}
{% set title = "Articles" %}
{% set subtitle = "Toute les derni√®res fraiches news du serveur" %}
{% block content %}
    <!-- Main content -->
    <div class="container content">
        <!-- Articles -->
        {% if nbNews > 0 %}
            <div class="articles-home">
                <div class="mosaic">
                    {% for infos in news %}
                        <article class="card">
                            <header class="card-thumb">
                                <a href="#">
                                    <img src="">
                                </a>
                            </header>
                            <div class="card-body">
                                <div class="card-title">
                                    <a href="#">
                                        {{ infos.title }}
                                    </a>
                                </div>
                                <div class="card-subtitle">
                                    <a href="#">
                                        <i class="icon icon-user"></i>
                                        John Doe
                                    </a>
                                    <a href="#">
                                        <i class="icon icon-time"></i>
                                        {{ timeago(infos.post_date) }}
                                    </a>
                                </div>
                                <p class="card-description">
                                    Curabitur et molestie lorem. Vivamus venenatis nisi vel rutrum convallis. Donec
                                    ullamcorper
                                    odio
                                    eu est auctor, quis bibendum felis facilisis. Phasellus tincidunt ipsum erat.
                                    Curabitur in
                                    dui
                                    vel tellus ultrices interdum quis vitae mauris.
                                </p>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        <!-- Articles Fin -->
        <!-- Pagination -->
        {% if haveToPaginate %}
            <div class="pagination-container">
                <!-- DC Pagination:A1 Start -->
                <ul class="tsc_pagination tsc_paginationA tsc_paginationA01">
                    {#<li><a href="#" class="first">First</a></li>#}
                    {% if currentPage > 1 %}
                        <li>
                            <a href="{{ path_for('all-posts') }}/{{ currentPage - 1 }}" aria-label="Previous"
                               class="previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% endif %}
                    {% for infos in pages %}
                        <li>
                            <a href="{{ path_for('all-posts') }}/{{ infos }}"
                               {% if infos == currentPage %}class="current"{% endif %}>
                                {{ infos }}
                            </a>
                        </li>
                    {% endfor %}
                    {% if currentPage < nbPage %}
                        <li>
                            <a href="{{ path_for('all-posts') }}/{{ currentPage + 1 }}" aria-label="Next" class="next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {% endif %}
                    {#<li><a href="#" class="last">Last</a></li>#}
                </ul>
                <!-- DC Pagination:A1 End -->
            </div>
        {% endif %}
        {% if nbNews == 0 %}
            <!-- Si pas d'articles -->
            <div class="no-item-container">
                <div class="no-item-content">
                    <h4><i class="icon-erroralt"></i></h4>
                    <h4>Aucun articles disponibles</h4>
                </div>
            </div>
            <!-- Fin si pas d'articles -->
        {% endif %}
        <!-- Pagination fin -->
    </div>
    <!-- Main content fin -->
{% endblock %}
{% block scripts %}
{% endblock %}
