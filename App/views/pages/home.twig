{% extends "default.twig" %}
{% set active_page = "home" %}
{% set show_title = false %}
{% set title = 'home'|trans %}
{% block cover %}
    <!------Cover------>
    <div class="cover-back">
        <div class="cover">
            <div class="container">
                <div class="one-half column">
                    <h4 class="cover-heading">{{ 'home.cover.title'|trans }}</h4>
                    <div class="animated bounceInLeft">
                        <a class="button button-primary" href="{{ path_for('play') }}"><i class="icon-play icon"></i> {{ 'play.title'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!------Cover fin------>
{% endblock %}
{% block content %}
    <!-- Main content -->
    <div class="eight columns">
        <!-- Articles pined -->

        <!-- end Articles pined -->
        <!-- Articles -->
        <div class="articles-home">
            <h4 class="heading heading-bar"><span>{{ 'home.last_posts'|trans }}</span></h4>
            {% if posts_count > 0 %}
                <!-- Première ligne de card -->
                <div class="mosaic">
                    {% for infos in first_row %}
                        {{ include('macros/card.twig') }}
                    {% endfor %}
                </div>
                <!-- Fin première ligne de card -->
                <!-- Seconde ligne de card -->
                <div class="mosaic">
                    {% for infos in second_row %}
                        {% set card_special_class = "card-second" %}
                        {{ include('macros/card.twig') }}
                    {% endfor %}

                    <!-- Plus card -->
                    <a class="card card-second card-plus no-link" href="{{ path_for('all-posts') }}">
                        <div class="card-plus-text">{{ 'home.cards.more_posts'|trans }}</div>
                        <i class="icon icon-calcplus"></i>
                    </a>
                    <!-- Fin plus card-->
                </div>
                <!-- Fin seconde ligne de card -->
            {% endif %}
            <!-- Si pas d'articles -->
            {% if posts_count == 0 %}
                <div class="no-item-container">
                    <div class="no-item-content">
                        <h4><i class="icon-erroralt"></i></h4>
                        <h4>{{ 'blog.no_posts'|trans }}</h4>
                    </div>
                </div>
            {% endif %}
            <!-- Fin si pas d'articles -->
        </div>
        <!-- Articles Fin -->
        <!-- Informations début -->
        <div class="side-item">
            <h4 class="heading-bar"><span>Informations</span></h4> 
            <a class="button button-primary informations" id="recrutement-button" href="https://forum.badblock.fr/recrutement/" ><i class="far fa-file-alt"></i>  Les Recrutements<br>Trouvez toutes les informations nécessaires pour rejoindre notre équipe</a><br>
            <a class="button button-primary informations" id="staff-button" href="/staff"><i class="fas fa-sitemap"></i>  Le Staff<br>Découvrez l'équipe de Badblock, sa hiérarchie et son fonctionnement</a>
            <a class="button button-primary informations" id="devblog-button" href="https://forum.badblock.fr/devblog/"><i class="far fa-file-code"></i>  Le DevBlog<br>Les dernières modifications apportées sur le serveur sont ici !</a>
        </div>
        <!-- Informations fin -->
    </div>
    <!-- Main content fin -->

    {% include 'macros/sidebar.twig' %}

{% endblock %}