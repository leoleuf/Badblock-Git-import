{% extends 'macros/link.twig' %}
{% block link_content %}
    {% if error %}
            <div class="alert alert-error">
                {{ error }}
                <i class="icon icon-remove"></i>
            </div>
    {% endif %}
    <h5>Tape le code que tu as reçu par message sur le serveur BadBlock :</h5>
    <br>
    <form method="post" action="/link" class="recharge-chose-custom">
        <input type="hidden" name="step" value="2">

        <label for="code">Code :</label>
        <input name="code" class="u-full-width" type="text" placeholder=""
               id="code" required>
        <div class="c-input-group">
            <button class="button button-danger" type="submit">Valider</button>
        </div>
    </form>

    <div class="shop-summary">
        <div class="shop-summary-icon">
            <i class="icon-info-sign icon"></i> Si tu ne reçois pas de message sur le serveur avec un code de confirmation, ouvre un ticket sur le Forum.
        </div>
    </div>
{% endblock %}

