{% extends "default.twig" %}
{% set show_title = false %}
{% set active_page = "stats" %}
{% set title = user.name %}
{% set subtitle = 'Ses statistiques' %}
{% block cover %}
    <!------Cover------>
    <div class="cover-back">
        <div class="cover cover-profile">
            <div class="container">
                <div class="one-half column animated bounceInLeft">
                    <div class="profile-title">
                        <div class="profile-mc-head"><img src="https://cdn.badblock.fr/head/{{ user.realName }}/192.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}"></div>
                        <div>
                            <h2 class="cover-heading">{{ user.realName }}</h2>
                            <span class="badge badge-{{ user.permissions.group }}">{{ ucfirst(user.permissions.group) }}</span>
                            {% for key, permission in user.permissions.alternateGroups %}
                                <span class="badge badge-{{ key }}">{{ ucfirst(key) }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="one-half column animated bounceInLeft">
                    <div class="search-container">
                        <div class="games-info">
                            <h2 class="cover-heading">Amis</h2>
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                            &nbsp;&nbsp;
                            <img src="https://cdn.badblock.fr/head/{{ user.realName }}/32.png" title="Tête de {{ user.realName }}" alt="Tête de {{ user.realName }}" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="profile-info">
                <div class="container">
                    <ul>
                        <li><i class="icon icon-bookmarkalt"></i> {{ user.game.level|number_format(0, '', ' ') }} <span>Levels</span></li>
                        <li><i class="icon icon-bookmarkalt"></i> {{ user.game.xp|number_format(0, '', ' ') }} <span>Xp</span></li>
                        <li><i class="icon icon-value-coins"></i> {{ user.game.badcoins|number_format(0, '', ' ') }} <span>BadCoins</span></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <!------Cover fin------>
{% endblock %}
{% block content %}
    {% if user.punish.mute == true %}
        <div class="alert alert-warning" role="alert">
            Cet Utilisateur est baillonné jusqu'au {{ user.punish.muteEnd | date("m/d/Y") }}
        </div>
    {% endif %}
    {% if user.punish.ban == true %}
        <div class="alert alert-warning" role="alert">
            Cet Utilisateur est suspendu jusqu'au {{ user.punish.banEnd | date("m/d/Y") }}
        </div>
    {% endif %}
    <div class="profile-stats">
        <h2>Statistiques</h2>
        <div class="row">
            <div class="four columns">
                <div class="game-title"><h3>Tower <span class="badge badge-primary">{{ user.game.stats.tower.cpoints|number_format(0, '', ' ') }} Points</span></h3></div>
                <table class="u-full-width">
                    <tbody>
                    <tr>
                        <td>Exécutions</td>
                        <td>{{ user.game.stats.tower.kills|number_format(0, '', ' ') }}</td>
                    </tr>
                    <tr>
                        <td>Morts</td>
                        <td>{{ user.game.stats.tower.deaths|number_format(0, '', ' ') }}</td>
                    </tr>
                    <tr>
                        <td>Points</td>
                        <td>{{ user.game.stats.tower.marks|number_format(0, '', ' ') }}</td>
                    </tr>
                    <tr>
                        <td>Parties gagnés</td>
                        <td>{{ user.game.stats.tower.wins|number_format(0, '', ' ') }}</td>
