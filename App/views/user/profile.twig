                <td>Parties perdus</td>
                <td>{{ user.game.stats.pearlswar.looses }}</td>
            </tr>
            </tbody>
        </table>

        <h3>Uhc speed</h3>
        <table class="u-full-width">
            <tbody>
            <tr>
                <td>Exécutions</td>
                <td>{{ user.game.stats.uhcspeed.wins }}</td>
            </tr>
            <tr>
                <td>Morts</td>
                <td>{{ user.game.stats.uhcspeed.deaths }}</td>
            </tr>
            <tr>
                <td>Parties gagnés</td>
