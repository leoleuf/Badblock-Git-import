{% extends "default.twig" %}
{% set description = "Obtiens dès maintenant des Grades, des Accès, des Clés ou des Objets sur la boutique de BadBlock pour améliorer drastiquement ton expérience de jeu sur nos serveurs. Résultat garanti." %}
{% set active_page = "shop" %}
{% set show_title = false %}
{% set title = 'shop.title'|trans %}
{% block cover %}
<div class="cover-back">
    <div class="cover cover-profile">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="recharge-info">
                        <img src="https://images.badblock.fr/i/paypal.png" alt="PayPal" title="PayPal">
                        <img src="https://images.badblock.fr/i/smsplus.png" alt="SMS" title="SMS">
                        <img src="https://images.badblock.fr/i/paysafe.png" title="PaySafecard" alt="PaySafecard">
                        <img src="https://images.badblock.fr/i/mastercard%20logo.png" title="Carte bancaire"
                        alt="Carte bancaire">
                        <img src="https://images.badblock.fr/i/cb%20logo.png" title="Carte bancaire"
                        alt="Carte bancaire">
                        <img src="https://images.badblock.fr/i/visa%20logo.png" title="Visa" alt="Visa">
                    </div>
                    </div>
                    {% if (isOnline) %}
                    <a class="button button-primary solde-button" title="Solde actuel de mon compte"><i
                    class="fas fa-user"></i> Solde : {{ points|number_format(0, '', ' ') }} pb</a>
                    <a class="button button-success" href="/shop/recharge" title="Recharger mon compte"><i
                        class="far fa-gem"></i> Obtenir + de points boutique</a>
                    {% else %}
                    <a class="button button-primary" onclick="login()" title="Se connecter"><i
                            class="fas fa-user"></i> Se connecter</a>&nbsp;&nbsp;
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <nav class="shop-nav">
        <div class="container">
            <ul class="nav justify-content-center" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="grade-tab" data-toggle="tab" href="#grade" role="tab" aria-controls="grade">Grade</a>
                </li>
                {% for key,value in serverlist %}
                {% if key != 0 %}
                <li class="nav-item">
                    <a class="nav-link" id="{{ value['server']['name'] }}-tab" data-toggle="tab" href="#{{ value['server']['name'] }}" role="tab" aria-controls="{{ value['server']['name'] }}">{{ value['server']['name'] }}</a>
                </li>
                {% endif %}
                {% endfor %}
            </ul>
        </div>
    </nav>
    {% endblock %}
    {% block content %}
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="grade" role="tabpanel" aria-labelledby="grade-tab">
            {% include "shop/rank.twig" %}
        </div>
        {% set i = 0 %}
        {% for key, value in serverlist %}
        {% if key != 0 %}
        <div class="tab-pane fade" id="{{ value['server']['name'] }}" role="tabpanel" aria-labelledby="{{ value['server']['name'] }}-tab">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        {% for category in value['cat'] %}
                            <div class="col-12">
                                <h4 class="heading heading-bar"><span>{{ category['name'] }}</span></h4>
                            </div>
                            {% for products in category['items'] %}
                            <div class="col-12 col-md-4">
                                <div class="shop-package" id="prd-30{{ i }}">
                                    <h3>{{ products['name'] }}</h3>
                                    <div class="shop-package-content">
                                        <img src="{{ products['image'] }}" title="Produit Clé Ultimate" width="190" height="190">
                                                </div>
                                        <div class="shop-package-desc">{{ products['name'] }} x 1 <br> {{ products['description'] }}</div>
                                        <a href="/shop#product-{{ products['_id']['$oid'] }}" data-toggle="modal" data-target="#modalItem">Acheter ({{ products['price'] }})</a>
                                    </div>
                                </div>
                            {% endfor %}
                            {% set i = i + 1 %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% set i = i + 1 %}
            {% endfor %}
        </div>
        {% endblock %}