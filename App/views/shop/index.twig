        {% block content %}
        {% if eula == true or spider == true %}
        {% for key,value in serverlist %}
        {% if key != 0 %}
        <div id="{{ key }}" class="tabcontent" style="display: none;">
            {% for k,cat in value['cat'] %}
            <section class="shop-section-{{ k }}" class="tabcontent">
                <h4 class="heading heading-bar"><span>{{ cat['name'] }}
                                <small id="very-small">{{ cat['sub-name'] }}</small></span></h4>
                <div class="product-list">
                    {% for prod in cat['items'] %}
                    <a href="/shop#product-{{ prod['_id']["$oid"] }}"
                                   style="color: #fb3f00; text-decoration: none;"
                                   title="Produit {{ prod['name'] }}">
                                    {% if prod['promotion'] %}
                                        <div class="product-item product-item-promotion">
                                            <div class="promotion-coef">
                                                {{ prod['promotion_coef'] }}%
                                            </div>
                                            <div class="product-header">
                                                <h5 class="product-title">{{ prod['name'] }}</h5>
                                            </div>
                                            <div class="product-image">
                                                <img src="{{ prod['image'] }}">
                                            </div>
                                            <div class="product-price product-promotion"><span
                                                        class="promotion">{{ prod['promotion_new_price']|number_format(0, '', ' ') }}</span>
                                                <div class="product-old-price">
                                                    <span class="promotion-reduction">{{ prod['price']|number_format(0, '', ' ') }}</span>
                                                </div>
                                            </div>
                                            <div class="promotion-reduction"></div>
                                            <div class="product-footer">
                                                <div class="product-action">
                                                    <button idpro="{{ prod['_id']["$oid"] }}"
                                                            class="button button-primary achat">
                                                        <i class="fas fa-shopping-cart"></i>

                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="product-item">
                                            <div class="product-header">
                                                <h5 class="product-title">{{ prod['name'] }}</h5>
                                            </div>
                                            <div class="product-image">
                                                <img src="{{ prod['image'] }}"
                                                     title="Produit {{ prod['name'] }}"
