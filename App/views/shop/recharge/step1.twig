{% extends 'macros/recharge.twig' %}
{% block recharge_content %}
<div class="c-card c-card--highest recharge-list">
    <div class="c-card__item">
        <div class="recharge-price">
            200
        </div>
        <div class="recharge-real-price">
            5€
        </div>
        <div class="recharge-action">
            <a class="button button-primary" href="{{ path_for('shop.recharge.nextstep') }}?step=1&amount=200">{{ 'shop.chose'|trans }}</a>
        </div>
    </div>
    <div class="c-card__item">
        <div class="recharge-price">
            500
        </div>
        <div class="recharge-real-price">
            10€
        </div>
        <div class="recharge-action">
            <a class="button button-primary" href="{{ path_for('shop.recharge.nextstep') }}?step=1&amount=200">{{ 'shop.chose'|trans }}</a>
        </div>
    </div>
    <div class="c-card__item">
        <div class="recharge-price">
            1200
        </div>
        <div class="recharge-real-price">
            20€
        </div>
        <div class="recharge-action">
            <a class="button button-primary" href="{{ path_for('shop.recharge.nextstep') }}?step=1&amount=200">{{ 'shop.chose'|trans }}</a>
        </div>
    </div>
    <div class="c-card__item">
        <div class="recharge-price">
            2700
        </div>
        <div class="recharge-real-price">
            50€
        </div>
        <div class="recharge-action">
            <a class="button button-primary" href="{{ path_for('shop.recharge.nextstep') }}?step=1&amount=200">{{ 'shop.chose'|trans }}</a>
        </div>
    </div>
    <div class="c-card__item">
        <div class="recharge-price">
            {{ 'shop.recharge_custom_amount'|trans }} (Montant > 50€)
        </div>
        <div class="recharge-real-price">
            <form method="get" action="{{ path_for('shop.recharge.nextstep') }}" class="recharge-chose-custom">
                <input type="hidden" name="step" value="1">
                <div class="c-input-group">
                    <input class="c-field recharge-chose-field" type="number" name="amount" required>
                    <button class="button button-primary" type="submit">{{ 'shop.chose'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
    {#<button class="button button-danger recharge-next">Suivant</button>#}
</div>
{% endblock %}