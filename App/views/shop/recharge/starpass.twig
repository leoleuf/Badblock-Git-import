{% extends "default.twig" %}
{% set description = "Recharge ton compte sur BadBlock très simplement avec le service Starpass pour payer par PaySafeCard pour pouvoir profiter des nouvelles opportunités sur BadBlock." %}
{% set active_page = "shop" %}
{% set show_title = false %}
{% set title = 'shop.title'|trans %}

{% block cover %}


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Recharger -->

    <div class="cover-back">
        <div class="cover cover-profile">
            <div class="container">
                <div class="row d-align">
                    <div class="col-12 col-md-8">
                        <div class="recharge-info">
                            <img src="https://images.badblock.fr/i/paypal.png" alt="PayPal" title="PayPal">
                            <img src="https://images.badblock.fr/i/smsplus.png" alt="SMS" title="SMS">
                            <img src="https://images.badblock.fr/i/paysafe.png" title="PaySafecard" alt="PaySafecard">
                            <img src="https://images.badblock.fr/i/mastercard%20logo.png" title="Carte bancaire"
                                 alt="Carte bancaire">
                            <img src="https://images.badblock.fr/i/cb%20logo.png" title="Carte bancaire"
                                 alt="Carte bancaire">
                            <img src="https://images.badblock.fr/i/visa%20logo.png" title="Visa" alt="Visa">
                        </div>
                    </div>
                    <a class="button button-success solde-button" title="Solde actuel de mon compte"><i
                                class="fas fa-user"></i> Solde : {{ points|number_format(0, '', ' ') }} pb</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Fin recharger -->



{% endblock %}


{% block content %}
    <!-- Debut liste paiements -->

    <h4 class="heading-bar recharge-heading"><span>Obtenir + de points boutique</span></h4>
    <div class="row step">
        <div class="col-12 col-md-3">
            <a href="/shop/recharge">
                <input class="tab-top btn btn-recharge btn-actif" type="button" name="bt1" value="Pseudo"/>
            </a>
        </div>
        <div class="col-12 col-md-3">
            <a href="/shop/recharge/step-2">
                <input class="tab-top btn-recharge btn" type="button" name="bt2" value="Méthode" />
            </a>
        </div>
        <div class="col-12 col-md-3">
            <a href="/shop/recharge/step-paypal">
                <input class="tab-top btn-recharge btn" type="button" name="bt3" value="Combien de points ?" />
            </a>
        </div>
        <div class="col-12 col-md-3">
            <input class="tab-top btn btn-recharge disabled" type="button" name="bt4" value="Validation"  />
        </div>
    </div>

    <h5 id="somme">Combien de points boutique souhaites-tu ?</h5>
    {% if (codepromo is not empty) %}
        <div class="alert alert-success" role="alert" id="success-alert" style="font-size: 19px;">
            Vous utilisez le code promotionnel {{ codepromo }}. +{{ percentpromo }}% de points boutique sur votre rechargement. Valable 15 minutes.
        </div>
    {% endif %}
    <div class="row center">
        <div class="three columns small-offer">
            <h6 class="h6-small">{% if (cp > 1) %}<i><strike>1500</strike></i>{% else %}<br />{% endif %} {{ cp*1500 }} points boutique<br></h6>
            <br>Bonus +375<br></span>
             <span class="info hidden-text">Bonus inclus - Équivalent de 5€</span>
             <a href="/shop/recharge/starpass/0" class="button button-primary small-offer-btn" ><i class="fas fa-check"></i>  Obtenir</a>
         </div>
         <div class="three columns small-offer">
             <h6 class="h6-small">{% if (cp > 1) %}<i><strike>3000</strike></i>{% else %}<br />{% endif %} {{ cp*3000 }} points boutique<br></h6>
             <br>Bonus +750<br></span>
             <span class="info hidden-text">Bonus inclus - Équivalent de 10€</span>
             <a href="/shop/recharge/starpass/1" class="button button-primary small-offer-btn" ><i class="fas fa-check"></i>  Obtenir</a>
         </div>
         <div class="three columns small-offer">
             <h6 class="h6-small">{% if (cp > 1) %}<i><strike>4500</strike></i>{% else %}<br />{% endif %} {{ cp*4500 }} points boutique<br></h6>
             <br>Bonus +1 125<br></span>
             <span class="info hidden-text">Bonus inclus - Équivalent de 15€</span>
             <a href="/shop/recharge/starpass/2" class="button button-primary small-offer-btn" ><i class="fas fa-check"></i>  Obtenir</a>
         </div>
         <div class="three columns small-offer">
             <h6 class="h6-small">{% if (cp > 1) %}<i><strike>6000</strike></i>{% else %}<br />{% endif %} {{ cp*6000 }} points boutique<br></h6>
             <br>Bonus +1 500<br></span>
             <span class="info hidden-text">Bonus inclus - Équivalent de 20€</span>
             <a href="/shop/recharge/starpass/3" class="button button-primary small-offer-btn" ><i class="fas fa-check"></i>  Obtenir</a>
         </div>
     </div>
     <div class="row center big-offer promotion-border top-big">
         <h6 class="h6-big">{% if (cp > 1) %}<i><strike>1500</strike></i>{% else %}<br />{% endif %} {{ cp*15000 }} points boutique<br></h6>
         <br>Bonus +3 750<br></span>
         <span class="info hidden-text">Bonus inclus - Équivalent de 50€</span>
         <a href="/shop/recharge/starpass/4" class="button button-primary big-offer-btn" ><i class="fas fa-check"></i>  Obtenir</a>
    </div>

{% endblock %}

