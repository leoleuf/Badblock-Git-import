{% extends 'default.twig' %}
{% set show_title = true %}
{% set active_page = "stats" %}
{% set title = name %}
{% block cover %}
<div class="cover-back podium-cover">
        <div class="cover">
            <div class="container">
                <div class="podium-cover-content">
                    <img src="https://guiria.badblock.fr/head/{{ datatop[0]['playerName'] }}/192.png" class="avatar first">
                    <img src="https://guiria.badblock.fr/head/{{ datatop[1]['playerName'] }}/192.png" class="avatar second">
                    <img src="https://guiria.badblock.fr/head/{{ datatop[2]['playerName'] }}/192.png" class="avatar third">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block content %}
{#
On liste les différantes place en grossisant au fur et à mesure
#}
<table class="c-table stats-podium-table">
  <thead class="c-table__head">
    <tr class="c-table__row c-table__row--heading">
      <th class="c-table__cell">Place</th>
      <th class="c-table__cell">Username</th>
      <th class="c-table__cell">Kills</th>
      <th class="c-table__cell">Morts</th>
      <th class="c-table__cell">Points</th>
      <th class="c-table__cell">Parties Gagnées</th>
      <th class="c-table__cell">Parties Perdues</th>
    </tr>
  </thead>
  <tbody class="c-table__body">
    <tr class="c-table__row first">
      <td class="c-table__cell">#1</td>
      <td class="c-table__cell"><img src="https://guiria.badblock.fr/head/{{ datatop[0]['playerName'] }}/192.png" class="avatar">{{ datatop[0]['playerName'] }}</td><!-- Je suis le meilleur! -->
      <td class="c-table__cell">{{  datatop[0]['kills'] }}</td>
      <td class="c-table__cell">{{  datatop[0]['deaths'] }}</td>
      <td class="c-table__cell">{{  datatop[0]['marks'] }}</td>
      <td class="c-table__cell">{{  datatop[0]['wins'] }}</td>
      <td class="c-table__cell">{{  datatop[0]['looses'] }}</td>
    </tr>
    <tr class="c-table__row second">
      <td class="c-table__cell">#2</td>
      <td class="c-table__cell"><img src="https://guiria.badblock.fr/head/{{ datatop[1]['playerName'] }}/192.png" class="avatar"> {{ datatop[1]['playerName'] }}</td> <!-- t'est une merde -->
        <td class="c-table__cell">{{  datatop[1]['kills'] }}</td>
        <td class="c-table__cell">{{  datatop[1]['deaths'] }}</td>
        <td class="c-table__cell">{{  datatop[1]['marks'] }}</td>
        <td class="c-table__cell">{{  datatop[1]['wins'] }}</td>
        <td class="c-table__cell">{{  datatop[1]['looses'] }}</td>
    </tr>
    <tr class="c-table__row third">
      <td class="c-table__cell">#3</td>
      <td class="c-table__cell"><img src="https://guiria.badblock.fr/head/{{ datatop[2]['playerName'] }}/192.png" class="avatar"> {{ datatop[2]['playerName'] }}</td>
        <td class="c-table__cell">{{  datatop[2]['kills'] }}</td>
        <td class="c-table__cell">{{  datatop[2]['deaths'] }}</td>
        <td class="c-table__cell">{{  datatop[2]['marks'] }}</td>
        <td class="c-table__cell">{{  datatop[2]['wins'] }}</td>
        <td class="c-table__cell">{{  datatop[2]['looses'] }}</td>
    </tr>
    {% for data,key in data %}
    <tr class="c-table__row">
      <td class="c-table__cell">#{{ data }}</td>
      <td class="c-table__cell"><img src="https://guiria.badblock.fr/head/{{ key['playerName'] }}/192.png" class="avatar"> {{ key['playerName'] }}</td>
        <td class="c-table__cell">{{  key['kills'] }}</td>
        <td class="c-table__cell">{{  key['deaths'] }}</td>
        <td class="c-table__cell">{{  key['marks'] }}</td>
        <td class="c-table__cell">{{  key['wins'] }}</td>
        <td class="c-table__cell">{{  key['looses'] }}</td>
    </tr>
   {% endfor %}
  </tbody>

</table>
{% endblock %}