{% extends 'default.twig' %}
{% set show_title = true %}
{% set title = "Statistiques" %}
{% set sub_title = "Sur le serveur" %}
{% block cover %}
    <nav class="stats-nav-container">
        <ul class="stats-nav">
            <li class="active">
                <a href="#">Général</a>
            </li>
            <li>
                <a href="#">Jeux</a>
            </li>
            <li>
                <a href="#">Joueurs</a>
            </li>
        </ul>
    </nav>
{% endblock %}
{% block content %}
    {# Comme un dashboard kibana, on liste differants panel avec le système de colums #}
    {# (metric) Un panel avec le numbre des joueurs connectés #}
    {# (chart) Un panel avec le numbre de connectés by time #}
    <!-- Main content -->
    <div class="stats-panel">
        <div class="three columns item">
            <div class="stats-panel-metric">
                <span class="metric">160</span>
                <span class="text">Joueurs connectés</span>
            </div>
        </div>
        <div class="seven columns item">
            <div class="stats-panel-chart" id="chart1-container" style="
            min-width: 310px;
            max-width: 800px;
            height: 400px;
            margin: 0 auto">

            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/series-label.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <script>
        Highcharts.chart('chart1-container', {

            title: {
                text: 'List of players'
            },
            yAxis: {
                title: {
                    text: 'Number of Players'
                }
            },
            legend: false,

            plotOptions: {
                series: {
                    label: {
                        connectorAllowed: false
                    },
                    pointStart: 2010
                }
            },

            series: [{
                name: "Nombre de joueurs",
                data: [43934, 52503, 57177, 69658, 97031, 119931, 137133, 154175]
            }],
            responsive: {
                rules: [{
                    condition: {
                        maxWidth: 500
                    },
                }]
            }

        });
    </script>
{% endblock %}